#Hapilin
n = int(input())
b = dict()
for i in range(n-1):
    a = input().split()
    b.update({a[0]:a[1]})
    if a[1] not in b.keys():
        b.update({a[1]:0})
for k,v in sorted(b.items()):
    d = int(0)
    c = k
    while True:
        if k in b.keys():
            k = b[k]
            d+=1
        else:
            break
    print(c, d-1)
    
    
